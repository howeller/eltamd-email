body,html{
	height: 100%;
}
body, #global {
	background-color:#ffffff;
	color:#636363;
	margin:0;
	min-width:100%;
	{{!/*min-height:1000px;*/}}
	overflow:visible;
	padding:0;
}
table {
	border-spacing:0;
	border-collapse:collapse;
	mso-table-lspace:0pt;
	mso-table-rspace:0pt;
	/*table-layout: fixed;*/
}
{{!/*table table {
	table-layout: auto;
}
table table table {
	table-layout: auto;
}*/}}
td, p{
	margin:0;
}
a {
	text-decoration: none;
}
img {
	-ms-interpolation-mode: bicubic;
	outline: none;
	border-style: none;
	border: 0;
	display: block;
	margin: 0;
	padding: 0;
	text-decoration: none;
}

.vert-center{
	vertical-align: middle;
}
