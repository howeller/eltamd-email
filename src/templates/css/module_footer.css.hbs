/* Footer
	Outlook doesn't like padding on image, paragraph, div or anchor tags.
*/
td.footer-logo-pad{
	padding: 0px 10px;
}
td.footer-txt-divider{
	border-right: 1px white solid
}
td.footer-txt{
	padding: 0px 10px;
}
td.social-icon-pad{
	padding: 5px 10px 10px;
}
td.footer-legal-pad{
	padding-right: 10px;
}
table.footer-bottom-row{
	display: inline-block;
}
.footer-txt{
	font-family: proxima-nova, Arial, sans-serif;
	font-weight: 300;
	color: white;
	font-size: 8px;
	line-height: 8px;
	text-align: center;
}

/* Images */

img.footer-logo {
	font-size: 1px;
	line-height: 1px;
	width: {{global.footer.logo.width}}px;
	height: {{global.footer.logo.height}}px;
}
img.social-icon{
	font-size: 1px;
	line-height: 1px;
	width: {{global.footer.social.width}}px;
	height: {{global.footer.social.height}}px;
}