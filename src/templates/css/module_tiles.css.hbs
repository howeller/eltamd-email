/* Tile Modules */

table.tile-wrapper{
	width: 100%;
	max-width: {{global.tileWidth}}px;
}
img.tile-img/*, .two-column-img-wrapper*/{
	width: {{global.tileWidth}}px;
	max-width:{{global.tileWidth}}px;
}

/* Text */
.tile-h1{
	font-family: niveau-grotesk, Century Gothic, CenturyGothic, AppleGothic, Helvetica Neue, Helvetica, Arial, sans-serif;
	font-weight: 300;
	font-size: 27px;
	line-height: 29px;
	letter-spacing: 3px;
}