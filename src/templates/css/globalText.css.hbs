/* 
	Outlook doesn't like padding on image, paragraph, div or anchor tags.
*/
.preview-txt{
	display: none;
	max-height: 0px;
	overflow: hidden;
}
.txt-center{
	text-align: center;
}
/*.semi-bold{
	font-weight: 600;
}*/
.underlined{
	text-decoration: underline;
}

img{
	font-family: niveau-grotesk, Century Gothic, CenturyGothic, AppleGothic, Helvetica Neue, Helvetica, Arial, sans-serif;
	font-weight: 300;
}
p, .body-txt/*, .headline-txt, .header-txt, .footer-txt*/{
	font-family: proxima-nova, Arial, sans-serif;
	margin: 0;
}


.body-txt{
	font-size: 13px;
	line-height: 15px;
	font-weight: 300;
	text-align: center;
	/*letter-spacing: 0.25px;*/
}
.legal-txt{
	font-family: proxima-nova, Arial, sans-serif;
	font-weight: 300;
	font-size: 6px;
	line-height: 7px;
	letter-spacing: 0.5px;
	/*text-align: center;*/
}
span.body-txt-phone{
	color: inherit !important; 
	font-weight: bold;
	text-decoration: none;
	white-space:nowrap;
	word-break:keep-all;
}

a.non-url{
	pointer-events:none;
	cursor:text;
}
