 /* CTA Buttons */
 
 .cta-btn {
	text-align: center;
	vertical-align: middle;
	line-height: 11px; {{!--line-height: {{global.cta.height}}px;--}}
	background-color:{{global.cta.bgColor}};
	width:{{global.cta.width}}px;
	height:{{global.cta.height}}px;
}

.cta-txt{
	color: {{global.cta.txtColor}};
	display:inline-block;
	font-family: proxima-nova, Arial, sans-serif;	
	font-weight: 700;
	font-size: {{global.cta.fontSize}}px;
	text-align: center;
	text-decoration: none;
	-webkit-text-size-adjust: none;
}
a.cta-txt{
	vertical-align:middle;
	line-height:{{global.cta.height}}px;
}
span.cta-txt{
	vertical-align:middle;
	line-height:{{global.cta.lineHeight}}px;
}

