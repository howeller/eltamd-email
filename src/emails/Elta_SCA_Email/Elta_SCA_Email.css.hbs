{{#with Emails.Elta_SCA_Email as | this |}}
/* Hero module */
table.hero-txt-wrapper{
	width: 100%;
	max-width: {{hero.txt.maxWidth}}px;
}

/* Statistic module */

.mod-stat-h1{
	font-family: niveau-grotesk, Century Gothic, CenturyGothic, AppleGothic, Helvetica Neue, Helvetica, Arial, sans-serif;
	font-weight: 300;
	font-size: 17px;
	line-height: 23px;
	letter-spacing: 2px;
	text-align: left;
	vertical-align: center;
	padding: 20px 0px 20px 25px;
}
td.mod-stat-padding{
	padding: 10px 0px;
}
td.mod-stat-legal-padding{
	padding-top: 10px;
}
.mod-stat-number{
	font-family: proxima-nova, Arial, sans-serif;
	font-weight: 700;
	font-size: 50px;
	line-height: 50px;
	letter-spacing: 0px;
	text-align: center;
}
.mod-stat-txt{
	font-family: proxima-nova, Arial, sans-serif;
	font-weight: 700;
	font-size: 14px;
	line-height: 16px;
	letter-spacing: 0px;
	text-align: center;
	padding: 5px 10px 15px;
}
.mod-stat-legal-txt{
	font-family: proxima-nova, Arial, sans-serif;
	font-weight: 300;
	font-size: 6px;
	line-height: 7px;
	letter-spacing: 0.5px;
	text-align: center;
	padding-top: 10px;
}
